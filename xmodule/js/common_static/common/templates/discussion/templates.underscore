  <%= /* xss-lint: disable=underscore-not-escaped */
      _.template(
          $('#forum-actions').html())(
          {
              contentId: cid,
              contentType: 'comment',
              primaryActions: [],
              secondaryActions: ['edit', 'delete', 'report'],
